# =====================================================
# AI Story Book - Environment Variables
# =====================================================
# Copy this file to .env and fill in the values

# ===================
# Database
# ===================
DB_USER=aistorybook
DB_PASSWORD=change_me_to_secure_password
DB_NAME=aistorybook

# ===================
# Redis
# ===================
# Default: redis://redis:6379/0 (set in docker-compose)

# ===================
# LLM Configuration
# ===================
# Provider: openai, anthropic, mock
LLM_PROVIDER=openai
LLM_API_KEY=sk-your-api-key-here
LLM_MODEL=gpt-4o

# ===================
# Image Generation
# ===================
# Provider: replicate, fal, mock
IMAGE_PROVIDER=replicate
IMAGE_API_KEY=r8_your-api-key-here

# ===================
# S3 Storage
# ===================
# For MinIO (self-hosted):
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=change_me_to_secure_password
S3_BUCKET=ai-story-book
S3_REGION=us-east-1

# For AWS S3:
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_ACCESS_KEY=AKIAIOSFODNN7EXAMPLE
# S3_SECRET_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

# For Cloudflare R2:
# S3_ENDPOINT=https://<account_id>.r2.cloudflarestorage.com
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key

# ===================
# TTS (Text-to-Speech)
# ===================
# Provider: google, elevenlabs, mock
TTS_PROVIDER=mock

# Google Cloud TTS
# GOOGLE_TTS_API_KEY=your-google-tts-api-key

# ElevenLabs
# ELEVENLABS_API_KEY=your-elevenlabs-api-key
# ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# ===================
# Application
# ===================
# Environment: development, staging, production
ENVIRONMENT=production

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Rate limiting (requests per minute per user)
RATE_LIMIT=10

# ===================
# Security
# ===================
# Secret key for session encryption (generate with: openssl rand -hex 32)
SECRET_KEY=change_me_to_random_string

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
