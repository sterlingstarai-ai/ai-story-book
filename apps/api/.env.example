# ========================================
# AI Story Book API - Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# WARNING: Never commit .env to version control!
# ========================================

# ====================
# App Configuration
# ====================
APP_NAME="AI Story Book API"
APP_VERSION="0.2.0"
DEBUG=false  # Set to true only for local development

# ====================
# Database (PostgreSQL)
# ====================
# WARNING: Change these credentials in production!
DATABASE_URL=postgresql://storybook:storybook123@localhost:5432/storybook

# ====================
# Redis
# ====================
REDIS_URL=redis://localhost:6379/0

# ====================
# Celery (Background Tasks)
# ====================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
USE_CELERY=false  # Set to true in production for async job processing

# ====================
# S3/MinIO Storage
# ====================
# WARNING: Change these credentials in production!
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET=storybook
S3_PUBLIC_URL=http://localhost:9000/storybook

# ====================
# LLM Provider
# ====================
# Options: openai, anthropic, mock
LLM_PROVIDER=mock

# For OpenAI:
# LLM_PROVIDER=openai
# LLM_API_KEY=sk-your-openai-api-key-here
# LLM_MODEL=gpt-4o-mini  # or gpt-4o, gpt-4-turbo

# For Anthropic:
# LLM_PROVIDER=anthropic
# LLM_API_KEY=sk-ant-your-anthropic-api-key-here
# LLM_MODEL=claude-3-5-sonnet-20241022

LLM_API_KEY=
LLM_MODEL=gpt-4o-mini
LLM_TIMEOUT=30

# ====================
# Image Generation
# ====================
# Options: replicate, fal, mock
IMAGE_PROVIDER=mock

# For Replicate (SDXL/Flux):
# IMAGE_PROVIDER=replicate
# IMAGE_API_KEY=r8_your-replicate-api-key-here

# For FAL.ai (Flux Schnell):
# IMAGE_PROVIDER=fal
# IMAGE_API_KEY=your-fal-api-key-here

IMAGE_API_KEY=
IMAGE_TIMEOUT=90
IMAGE_MAX_CONCURRENT=3
IMAGE_MAX_RETRIES=3

# ====================
# TTS (Text-to-Speech)
# ====================
# Options: google, elevenlabs, mock
TTS_PROVIDER=mock

# For Google Cloud TTS:
# TTS_PROVIDER=google
# GOOGLE_TTS_API_KEY=your-google-cloud-api-key-here

# For ElevenLabs:
# TTS_PROVIDER=elevenlabs
# ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
# ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Default: Rachel voice

GOOGLE_TTS_API_KEY=
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# ====================
# Rate Limiting
# ====================
RATE_LIMIT_REQUESTS=10   # Max requests per window
RATE_LIMIT_WINDOW=60     # Window size in seconds

# ====================
# Job Settings
# ====================
JOB_MAX_RETRIES=3
JOB_SLA_SECONDS=600      # 10 minutes max per job

# ====================
# Guardrails
# ====================
DAILY_JOB_LIMIT_PER_USER=20
MAX_PENDING_JOBS=100

# ====================
# CORS (Security)
# ====================
# Comma-separated list of allowed origins
# Example: http://localhost:3000,https://yourdomain.com
# WARNING: Must be set explicitly in production!
CORS_ORIGINS=http://localhost:3000
