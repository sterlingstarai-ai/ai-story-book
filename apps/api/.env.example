# App
APP_NAME="AI Story Book API"
APP_VERSION="0.1.0"
DEBUG=true

# Database
DATABASE_URL=postgresql://storybook:storybook123@localhost:5432/storybook

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# S3/Minio
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET=storybook
S3_PUBLIC_URL=http://localhost:9000/storybook

# LLM (OpenAI / Anthropic)
LLM_PROVIDER=openai
LLM_API_KEY=your-openai-api-key
LLM_MODEL=gpt-4o-mini
LLM_TIMEOUT=30

# Image Generation (Replicate / FAL)
IMAGE_PROVIDER=replicate
IMAGE_API_KEY=your-replicate-api-key
IMAGE_TIMEOUT=90
IMAGE_MAX_CONCURRENT=3

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# Job Settings
JOB_MAX_RETRIES=3
JOB_SLA_SECONDS=600
